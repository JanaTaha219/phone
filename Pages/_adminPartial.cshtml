        .brand-link {
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #f8f9fa; /* Light gray background for brand */
            padding: 10px;
            border-bottom: 1px solid #ddd; /* Light border */
        }

        .brand-image {
            max-width: auto; /* Ensure image fits within its container */
            height: auto; /* Maintain aspect ratio */
            display: block;
            margin-left: auto;
            margin-right: auto;
        }

        .sidebar {
            padding: 20px 10px;
            font-size: 16px;
            height: calc(100% - 60px);
            overflow-y: auto;
        }

        .user-panel {
            margin-bottom: 20px;
            padding: 10px;
            border-bottom: 1px solid #ddd; /* Light border */
        }

            .user-panel .info a {
                color: #333; /* Darker text */
                font-size: 14px;
                text-decoration: none;
                display: block;
            }

        .nav-sidebar {
            list-style: none;
            padding: 0;
            margin: 0;
        }

            .nav-sidebar li a {
                color: #333; /* Darker text */
                text-decoration: none;
                display: flex;
                align-items: center;
                padding: 10px;
                border-radius: 5px;
                font-size: 14px;
                transition: background-color 0.3s ease, color 0.3s ease, transform 0.2s ease; /* Smooth transitions */
            }

                .nav-sidebar li a:hover {
                    background-color: #e9ecef; /* Lighter gray background on hover */
                    color: #007bff; /* Change text color on hover */
                    transform: translateX(5px); /* Slight move to the right */
                }

            .nav-sidebar .active > a {
                background-color: #3c8dbc;
                color: #ffffff;
            }

            .nav-sidebar .nav-treeview {
                margin-left: 20px;
                display: none; /* Initially hide the nested lists */
            }

                .nav-sidebar .nav-treeview li a {
                    font-size: 13px;
                    padding-left: 30px;
                }

            .nav-sidebar li a .nav-icon {
                margin-right: 10px;
                width: 20px;
                height: 20px;
                transition: transform 0.3s ease; /* Smooth transition for icons */
            }

            .nav-sidebar li a:hover .nav-icon {
                transform: scale(1.1); /* Slightly enlarge the icon on hover */
            }

        .main-sidebar.collapsed {
            width: 60px;
        }

            .main-sidebar.collapsed .brand-image {
                max-height: 40px;
            }

            .main-sidebar.collapsed .sidebar-menu li a {
                justify-content: center;
                padding: 10px;
            }

            .main-sidebar.collapsed .nav-icon {
                margin-right: 0;
                display: block;
            }

            .main-sidebar.collapsed .nav-sidebar li a p {
                display: none;
            }

            .main-sidebar.collapsed .nav-sidebar li a i.fas.fa-angle-left.right {
                display: none;
            }

            .main-sidebar.collapsed .nav-treeview {
                display: none;
            }

        .main-sidebar:not(.collapsed) .nav-icon {
            width: 20px;
            height: 20px;
        }

        .nav-sidebar li a svg {
            width: 20px;
            height: 20px;
            transition: width 0.3s ease, height 0.3s ease;
            margin-right: 10px; /* Space between icon and text */
        }

        .main-sidebar.collapsed .nav-sidebar li a svg {
            width: 20px;
            height: 20px;
        }

        /* Main Content Styles */
        .main-content {
            margin-left: 250px;
            padding: 20px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            width: calc(100% - 250px);
            transition: margin-left 0.3s ease, width 0.3s ease;
        }

        .main-sidebar.collapsed + .main-content {
            margin-left: 60px;
            width: calc(100% - 60px);
        }

        
